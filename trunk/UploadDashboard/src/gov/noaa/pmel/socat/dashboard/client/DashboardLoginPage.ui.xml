<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style src="FixedWidth.css" />

	<g:VerticalPanel addStyleNames="{style.fixedwidthcontainer}" horizontalAlignment="ALIGN_CENTER">
		<g:HTML addStyleNames="{style.introtitle}" ui:field="welcomeTitle" />
		<g:HTML addStyleNames="{style.introhtml}" ui:field="welcomeHtml" />
		<g:HorizontalPanel addStyleNames="{style.labeledtextpanel}" verticalAlignment="ALIGN_MIDDLE">
			<g:Label addStyleNames="{style.labeledtextlabel}" ui:field="nameLabel" />
			<g:TextBox addStyleNames="{style.labeledtextbox}" ui:field="nameText" />
		</g:HorizontalPanel>
		<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
			<g:Label addStyleNames="{style.labeledtextlabel}" ui:field="passLabel" />
			<g:PasswordTextBox addStyleNames="{style.labeledtextbox}" ui:field="passText" />
		</g:HorizontalPanel>
		<g:Button addStyleNames="{style.loginbutton}" ui:field="loginButton" />
	</g:VerticalPanel>

</ui:UiBinder> 