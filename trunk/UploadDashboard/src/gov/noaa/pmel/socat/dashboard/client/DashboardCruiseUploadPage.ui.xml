<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style src="CommonFullWidth.css" />

	<g:DockLayoutPanel unit="EM" addStyleNames="{style.fullwidthcontainer}" >
		<g:north size="28">
			<g:FlowPanel>
				<g:FlowPanel addStyleNames="{style.userinfopanel}">
					<g:Label addStyleNames="{style.userinfolabel}" ui:field="userInfoLabel" />
					<g:Button addStyleNames="{style.logoutbutton}" ui:field="logoutButton" />
				</g:FlowPanel>
				<g:HTML addStyleNames="{style.introhtml}" ui:field="introHtml" />
				<g:FormPanel ui:field="uploadForm">
					<g:FlowPanel>
						<g:FileUpload name="cruiseupload" addStyleNames="{style.uploadfile}"
								ui:field="cruiseUpload" />
						<g:Hidden name="username" ui:field="usernameToken" />
						<g:Hidden name="passhash" ui:field="passhashToken" />
						<g:Hidden name="cruiseaction" ui:field="actionToken" />
						<g:Hidden name="cruiseencoding" ui:field="encodingToken" />
					</g:FlowPanel>
				</g:FormPanel>
				<g:FlowPanel addStyleNames="{style.horizontalbuttonpanel}">
					<g:Button addStyleNames="{style.horizontalbutton}" ui:field="advancedButton" />
				</g:FlowPanel>
				<!-- The following FlowPanel is only shown in advanced settings -->
				<g:FlowPanel ui:field="advancedPanel">
					<g:HTML addStyleNames="{style.introhtml}" ui:field="advancedHtml"/>
					<g:FlowPanel addStyleNames="{style.labeledlistpanel}">
						<g:Label addStyleNames="{style.labeledlistlabel}" ui:field="encodingLabel" />
						<g:ListBox addStyleNames="{style.labeledlistbox}" ui:field="encodingListBox" />
					</g:FlowPanel>
					<g:FlowPanel addStyleNames="{style.horizontalbuttonpanel}">
						<g:Button addStyleNames="{style.horizontalbutton}" ui:field="previewButton" />
					</g:FlowPanel>
				</g:FlowPanel>
			</g:FlowPanel>
		</g:north>
		<g:south size="4">
			<g:FlowPanel addStyleNames="{style.horizontalbuttonpanel}">
				<g:Button addStyleNames="{style.horizontalbutton}" ui:field="createButton" />
				<g:Button addStyleNames="{style.horizontalbutton}" ui:field="overwriteButton" />
				<g:Button addStyleNames="{style.horizontalbutton}" ui:field="cancelButton" />
			</g:FlowPanel>
		</g:south>
		<g:center>
			<!-- The following SimplePanel is only shown in advanced settings or if there was an error -->
			<g:SimplePanel addStyleNames="{style.previewpanel}" ui:field="previewPanel">
				<g:ScrollPanel addStyleNames="{style.previewscroll}">
					<g:HTML addStyleNames="{style.previewhtml}" ui:field="previewHtml" />
				</g:ScrollPanel>
			</g:SimplePanel>
		</g:center>
	</g:DockLayoutPanel>

</ui:UiBinder> 