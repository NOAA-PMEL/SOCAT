<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style src="CommonFullWidth.css" />

	<g:FlowPanel>
		<g:FlowPanel addStyleNames="{style.userinfopanel}">
			<g:Label addStyleNames="{style.userinfolabel}" ui:field="userInfoLabel" />
			<g:Button addStyleNames="{style.logoutbutton}" ui:field="logoutButton" />
		</g:FlowPanel>
		<g:HTML addStyleNames="{style.addinfo}" ui:field="introHtml" />
		<g:FlowPanel addStyleNames="{style.archivepanel}">
			<g:RadioButton addStyleNames="{style.archivebutton}" 
					name="archiveRadioGroup" ui:field="socatRadio" />
			<g:Button addStyleNames="{style.archiveinfobutton}" 
					ui:field="socatInfoButton" />
		</g:FlowPanel>
		<g:FlowPanel addStyleNames="{style.archivepanel}">
			<g:RadioButton addStyleNames="{style.archivebutton}" 
					name="archiveRadioGroup" ui:field="cdiacRadio" />
			<g:Button addStyleNames="{style.archiveinfobutton}" 
					ui:field="cdiacInfoButton" />
		</g:FlowPanel>
		<g:FlowPanel addStyleNames="{style.archivepanel}">
			<g:RadioButton addStyleNames="{style.archivebutton}" 
					name="archiveRadioGroup" ui:field="ownerRadio" />
			<g:Button addStyleNames="{style.archiveinfobutton}" 
					ui:field="ownerInfoButton" />
		</g:FlowPanel>
		<g:FlowPanel addStyleNames="{style.archivepanel}">
			<g:RadioButton addStyleNames="{style.archivebutton}" 
					name="archiveRadioGroup" ui:field="doiRadio" />
			<g:TextBox addStyleNames="{style.doitextbox}" ui:field="doiTextBox" />
		</g:FlowPanel>
		<g:FlowPanel addStyleNames="{style.horizontalbuttonpanel}">
			<g:Button addStyleNames="{style.horizontalbutton}" ui:field="submitButton" />
			<g:Button addStyleNames="{style.horizontalbutton}" ui:field="cancelButton" />
		</g:FlowPanel>
	</g:FlowPanel>

</ui:UiBinder> 