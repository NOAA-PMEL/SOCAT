<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:cell="urn:import:com.google.gwt.user.cellview.client">

	<ui:style src="FullWidth.css" />

	<g:ScrollPanel addStyleNames="{style.fullpagecontainer}">
		<g:FlowPanel>
			<g:FlowPanel addStyleNames="{style.titlepanel}">
				<g:Button addStyleNames="{style.titlelogoutbutton}" ui:field="logoutButton" />
				<g:InlineLabel addStyleNames="{style.titleuserlabel}" ui:field="userInfoLabel" />
				<g:InlineLabel addStyleNames="{style.titlepagelabel}" ui:field="titleLabel" />
				<g:Label addStyleNames="{style.titlereset}" />
			</g:FlowPanel>
			<g:HTML addStyleNames="{style.introhtml}" ui:field="introHtml" />
			<g:TabLayoutPanel barUnit='EM' barHeight='3'>
				<g:tab>
					<g:header size='10'><b>Location</b></g:header>
					<g:FlowPanel>
						<g:Image addStyleNames="{style.previewimage}" ui:field="latVsLonImage" />
						<g:Image addStyleNames="{style.previewimage}" ui:field="latLonVsNumImage" />
						<g:Image addStyleNames="{style.previewimage}" ui:field="dayYearVsNumImage" />
					</g:FlowPanel>
				</g:tab>
				<g:tab>
					<g:header size='10'><b>Data</b></g:header>
					<g:FlowPanel>
						<g:Image addStyleNames="{style.previewimage}" ui:field="timeSeriesImage" />
						<g:Image addStyleNames="{style.previewimage}" ui:field="pressuresVsNumImage" />
						<g:Image addStyleNames="{style.previewimage}" ui:field="temperaturesVsNumImage" />
						<g:Image addStyleNames="{style.previewimage}" ui:field="xco2sVsNumImage" />
						<g:Image addStyleNames="{style.previewimage}" ui:field="salinitiesVsNumImage" />
					</g:FlowPanel>
				</g:tab>
				<g:tab>
					<g:header size='10'><b>fCO2_rec</b></g:header>
					<g:FlowPanel>
						<g:Image addStyleNames="{style.previewimage}" ui:field="fco2recVsNumImage" />
						<g:Image addStyleNames="{style.previewimage}" ui:field="fco2recVsSstImage" />
						<g:Image addStyleNames="{style.previewimage}" ui:field="fco2recVsSalImage" />
						<g:Image addStyleNames="{style.previewimage}" ui:field="fco2recVsFco2Image" />
						<g:Image addStyleNames="{style.previewimage}" ui:field="fco2recSrcHistogramImage" />
					</g:FlowPanel>
				</g:tab>
			</g:TabLayoutPanel>
			<g:FlowPanel addStyleNames="{style.horizontalbuttonpanel}">
				<g:Button addStyleNames="{style.horizontalbutton}" ui:field="dismissButton" />
			</g:FlowPanel>
		</g:FlowPanel>
	</g:ScrollPanel>

</ui:UiBinder>
