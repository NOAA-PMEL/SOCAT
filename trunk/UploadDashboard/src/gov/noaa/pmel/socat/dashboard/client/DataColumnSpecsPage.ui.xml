<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:cell="urn:import:com.google.gwt.user.cellview.client">

	<ui:style src="FullWidth.css" />

	<g:DockLayoutPanel unit="EM" addStyleNames="{style.fullwidthcontainer}">
		<g:north size="15">
			<g:FlowPanel>
				<g:FlowPanel addStyleNames="{style.userinfopanel}">
					<g:InlineLabel addStyleNames="{style.userinfolabel}" ui:field="userInfoLabel" />
					<g:Button addStyleNames="{style.userlogoutbutton}" ui:field="logoutButton" />
				</g:FlowPanel>
				<g:HTML addStyleNames="{style.introhtml}" ui:field="introHtml" />
			</g:FlowPanel>
		</g:north>
		<g:south size="8">
			<g:FlowPanel>
				<g:Label addStyleNames="{style.gridpagerlabel}" ui:field="pagerLabel" />
				<cell:SimplePager location="CENTER" addStyleNames="{style.gridpager}" ui:field="gridPager" />
				<g:FlowPanel addStyleNames="{style.horizontalbuttonpanel}">
					<g:Button addStyleNames="{style.horizontalbutton}" ui:field="submitButton" />
					<g:Button addStyleNames="{style.horizontalbutton}" ui:field="cancelButton" />
				</g:FlowPanel>
			</g:FlowPanel>
		</g:south>
		<g:center>
			<g:ResizeLayoutPanel addStyleNames="{style.gridresizepanel}">
				<cell:DataGrid ui:field="dataGrid" />
			</g:ResizeLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>

</ui:UiBinder> 