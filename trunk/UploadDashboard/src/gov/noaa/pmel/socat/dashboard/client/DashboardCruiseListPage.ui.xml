<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:cell="urn:import:com.google.gwt.user.cellview.client">

	<ui:style src="CommonFullWidth.css" />

	<g:DockLayoutPanel unit="EM" addStyleNames="{style.fullwidthcontainer}">
		<g:east size="0.5">
			<!-- Just to give uniform padding -->
			<g:Label />
		</g:east>
		<g:south size="0.5">
			<!-- Just to give uniform padding -->
			<g:Label />
		</g:south>
		<g:north size="9">
			<g:FlowPanel>
				<g:FlowPanel addStyleNames="{style.userinfopanel}">
					<g:Label addStyleNames="{style.userinfolabel}" ui:field="userInfoLabel" />
					<g:Button addStyleNames="{style.logoutbutton}" ui:field="logoutButton" />
				</g:FlowPanel>
				<g:FlowPanel addStyleNames="{style.agreepanel}">
					<g:CheckBox addStyleNames="{style.agreecheckbox}" ui:field="agreeShareCheckBox" />
					<g:Button addStyleNames="{style.agreeinfobutton}" ui:field="agreeShareInfoButton" />
				</g:FlowPanel>
				<g:FlowPanel addStyleNames="{style.agreepanel}">
					<g:CheckBox addStyleNames="{style.agreecheckbox}" ui:field="agreeArchiveCheckBox" />
					<g:Button addStyleNames="{style.agreeinfobutton}" ui:field="agreeArchiveInfoButton" />
				</g:FlowPanel>
			</g:FlowPanel>
		</g:north>
		<g:west size="9">
			<g:ScrollPanel addStyleNames="{style.submitscrollpanel}">
				<g:VerticalPanel addStyleNames="{style.submitpanel}">
					<g:Button addStyleNames="{style.submitpanelmainbutton}" ui:field="uploadButton" />
					<g:Button addStyleNames="{style.submitpanelbutton}" ui:field="deleteButton" />
					<g:Button addStyleNames="{style.submitpanelbutton}" ui:field="dataCheckButton" />
					<g:Button addStyleNames="{style.submitpanelbutton}" ui:field="metadataButton" />
					<g:Button addStyleNames="{style.submitpanelbutton}" ui:field="reviewButton" />
					<g:Button addStyleNames="{style.submitpanelbutton}" ui:field="qcSubmitButton" />
					<g:Button addStyleNames="{style.submitpanelbutton}" ui:field="archiveSubmitButton" />
					<g:Button addStyleNames="{style.submitpanelbutton}" ui:field="addToListButton" />
					<g:Button addStyleNames="{style.submitpanelbutton}" ui:field="removeFromListButton" />
				</g:VerticalPanel>
			</g:ScrollPanel>
		</g:west>
		<g:center>
			<g:ResizeLayoutPanel addStyleNames="{style.gridresizepanel}">
				<cell:DataGrid ui:field="uploadsGrid" />
			</g:ResizeLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>

</ui:UiBinder> 