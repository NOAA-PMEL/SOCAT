<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:cell="urn:import:com.google.gwt.user.cellview.client">

	<ui:style src="FullWidth.css" />

	<g:ScrollPanel addStyleNames="{style.fullpagecontainer}">
		<g:FlowPanel>
			<g:FlowPanel addStyleNames="{style.titlepanel}">
				<g:Button addStyleNames="{style.titlelogoutbutton}" ui:field="logoutButton" />
				<g:InlineLabel addStyleNames="{style.titleuserlabel}" ui:field="userInfoLabel" />
				<g:InlineLabel addStyleNames="{style.titlepagelabel}" ui:field="titleLabel" />
				<g:Label addStyleNames="{style.titlereset}" />
			</g:FlowPanel>
			<g:HTML addStyleNames="{style.cruisenamesintro}" ui:field="introHtml" />
			<g:DockLayoutPanel unit="EM" addStyleNames="{style.metadatapanel}">
				<g:west size="7">
					<g:FlowPanel addStyleNames="{style.uploadpanel}">
						<g:Button addStyleNames="{style.uploadpanelbutton}" ui:field="uploadButton" />
						<g:Button addStyleNames="{style.uploadpanelbutton}" ui:field="deleteButton" />
					</g:FlowPanel>
				</g:west>
				<g:center>
					<g:ResizeLayoutPanel addStyleNames="{style.metadatagridpanel}">
						<cell:DataGrid ui:field="addlDocsGrid" />
					</g:ResizeLayoutPanel>
				</g:center>
			</g:DockLayoutPanel>
			<g:FlowPanel addStyleNames="{style.horizontalbuttonpanel}">
				<g:Button addStyleNames="{style.horizontalbutton}" ui:field="dismissButton" />
			</g:FlowPanel>
		</g:FlowPanel>
	</g:ScrollPanel>

</ui:UiBinder> 