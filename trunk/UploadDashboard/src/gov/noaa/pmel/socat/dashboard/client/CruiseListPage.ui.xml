<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:cell="urn:import:com.google.gwt.user.cellview.client">

	<ui:style src="FullWidth.css" />

	<g:ScrollPanel addStyleNames="{style.fullpagecontainer}">
		<g:FlowPanel>
			<g:FlowPanel addStyleNames="{style.titlepanel}">
				<g:Image addStyleNames="{style.titleimage}" ui:field="titleImage" />
				<g:Button addStyleNames="{style.titlelogoutbutton}" ui:field="logoutButton" />
				<g:InlineLabel addStyleNames="{style.titleuserlabel}" ui:field="userInfoLabel" />
				<g:InlineLabel addStyleNames="{style.titlepagelabel}" ui:field="titleLabel" />
				<g:Label addStyleNames="{style.titlereset}" />
			</g:FlowPanel>
			<g:DockLayoutPanel unit="EM" addStyleNames="{style.submitdockpanel}">
				<g:west size="7.5">
					<g:FlowPanel addStyleNames="{style.submitpanel}">
						<g:Button addStyleNames="{style.submitpanelbutton}" ui:field="uploadButton" />
						<g:Button addStyleNames="{style.submitpanelbutton}" ui:field="viewDataButton" />
						<g:Button addStyleNames="{style.submitpanelbutton}" ui:field="omeMetadataButton" />
						<g:Button addStyleNames="{style.submitpanelbutton}" ui:field="addlDocsButton" />
						<g:Button addStyleNames="{style.submitpanelbutton}" ui:field="qcSubmitButton" />
						<g:Button addStyleNames="{style.submitpanelbutton}" ui:field="reviewButton" />
						<g:Button addStyleNames="{style.submitpanelbutton}" ui:field="deleteButton" />
						<g:Button addStyleNames="{style.submitpanelbutton}" ui:field="addToListButton" />
						<g:Button addStyleNames="{style.submitpanelbutton}" ui:field="removeFromListButton" />
					</g:FlowPanel>
				</g:west>
				<g:center>
					<g:ResizeLayoutPanel>
						<cell:DataGrid addStyleNames="{style.datasetsgrid}" ui:field="datasetsGrid" />
					</g:ResizeLayoutPanel>
				</g:center>
			</g:DockLayoutPanel>
			<g:FlowPanel>
				<!-- Just a spacer at the bottom -->
				<g:Label addStyleNames="{style.horizontalbuttonpanel}" />
			</g:FlowPanel>
		</g:FlowPanel>
	</g:ScrollPanel>

</ui:UiBinder> 