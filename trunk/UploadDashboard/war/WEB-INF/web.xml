<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

	<!-- Servlets -->
	<servlet>
		<servlet-name>DashboardListServlet</servlet-name>
		<servlet-class>gov.noaa.pmel.socat.dashboard.server.DashboardListServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DashboardListServlet</servlet-name>
		<url-pattern>/SocatUploadDashboard/DashboardListService</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>DashboardCruiseUploadServlet</servlet-name>
		<servlet-class>gov.noaa.pmel.socat.dashboard.server.CruiseUploadService</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DashboardCruiseUploadServlet</servlet-name>
		<url-pattern>/SocatUploadDashboard/CruiseUploadService</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>DashboardDataSpecsServlet</servlet-name>
		<servlet-class>gov.noaa.pmel.socat.dashboard.server.DataSpecsServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DashboardDataSpecsServlet</servlet-name>
		<url-pattern>/SocatUploadDashboard/DataSpecsService</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>DashboardMetadataUploadServlet</servlet-name>
		<servlet-class>gov.noaa.pmel.socat.dashboard.server.MetadataUploadService</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DashboardMetadataUploadServlet</servlet-name>
		<url-pattern>/SocatUploadDashboard/MetadataUploadService</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>DashboardAddToSocatServlet</servlet-name>
		<servlet-class>gov.noaa.pmel.socat.dashboard.server.AddToSocatServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DashboardAddToSocatServlet</servlet-name>
		<url-pattern>/SocatUploadDashboard/AddToSocatService</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>AuthenticateFilter</filter-name>
		<filter-class>gov.noaa.pmel.socat.dashboard.server.AuthenticateFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>AuthenticateFilter</filter-name>
		<url-pattern>/SocatUploadDashboard/*</url-pattern>
		<url-pattern>/SocatUploadDashboard.html</url-pattern>
	</filter-mapping>

	<login-config>
		<auth-method>FORM</auth-method>
		<realm-name>socatdashboarduser</realm-name>
		<form-login-config>
			<form-login-page>/socatlogin.html</form-login-page>
			<form-error-page>/socatloginerror.html</form-error-page>
		</form-login-config>
	</login-config>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>SocatUploadDashboard.html</welcome-file>
	</welcome-file-list>

</web-app>
