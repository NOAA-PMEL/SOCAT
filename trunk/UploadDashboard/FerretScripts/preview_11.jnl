def sym lab_top = Temporal variations for  Expocode `EXPOCODE`
label/nouser  `($ppl$xlen)/2`,`($ppl$ylen)+0.4*($ppl$yorg)`, 0,0,0.13,  ($lab_top)


! reset
ppl txlabp,0
ppl axatic,5,5


FRAME($trans)/FORMAT=gif/FILE="($result_plot_image_filename)"
