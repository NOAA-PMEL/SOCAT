<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns="http://www.w3.org/2001/XMLSchema"
	targetNamespace="SanityChecker_ColumnInfo"
	elementFormDefault="qualified" xmlns:SanityCheckercolinfo="SanityChecker_ColumnInfo">

	<!-- This is the XML definition for the output of the SanityChecker for SOCAT. The output 
	  contains details of all the warnings, errors and	other messages produced by the Sanity 
	  Checker while processing an input data file. Any program calling the SanityChecker 
	  must expect an XML document of this specification to be made available in a location 
	  specified by the calling program. -->

  <!-- Root element -->
	<element name="column_info" type="SanityCheckercolinfo:col_info"></element>

  <!-- Root element content -->
	<complexType name="col_info">
		<sequence>
			<element name="socat_column" type="SanityCheckercolinfo:socat_column"
				maxOccurs="unbounded" minOccurs="1">
			</element>
			<element name="date_columns"
			  type="SanityCheckercolinfo:date_cols" maxOccurs="1" minOccurs="1">
			  </element>
			</sequence>
	</complexType>

  <!-- Contents of the socat_column elements -->
	<complexType name="socat_column">
		<sequence>
 				<element name="input_column" type="SanityCheckercolinfo:input_col"
  				maxOccurs="1" minOccurs="1">
  				</element>
			<element name="input_units" type="string" maxOccurs="1" minOccurs="1"></element>
		  <element name="missing_value" type="double" maxOccurs="1" minOccurs="0"></element>
     </sequence>
   	<attribute name="name" type="string"></attribute>
	</complexType>
	
	  <!-- Contents of the date_columns element -->
	  <complexType name="date_cols">
	    <choice>
        <element name="date_time" type="SanityCheckercolinfo:input_col"></element>
        <sequence>
          <element name="date" type="SanityCheckercolinfo:input_col"></element>
          <element name="time" type="SanityCheckercolinfo:input_col"></element>
        </sequence>
        <sequence>
          <element name="year" type="SanityCheckercolinfo:input_col"></element>
          <element name="month" type="SanityCheckercolinfo:input_col"></element>
          <element name="day" type="SanityCheckercolinfo:input_col"></element>
          <element name="hour" type="SanityCheckercolinfo:input_col"></element>
          <element name="minute" type="SanityCheckercolinfo:input_col"></element>
          <element name="second" type="SanityCheckercolinfo:input_col"></element>
        </sequence>
	    </choice>
	  </complexType>
	  
	     <!-- Defintion of the col_info/socat_column/input_column element -->
    <complexType name="input_col">
    	<simpleContent>
    		<extension base="string">
    			<attribute name="index" type="int"></attribute>
    		</extension>
    	</simpleContent>
    </complexType>
</schema>
